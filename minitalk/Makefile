$(NAME): 	$(OBJ)
			make -C libft
			make -C libftprintf
			@$(COMPILE) $(OBJ) -L. $(LIB)

%.o: 		%.c
			$(CC) -c $(CFLAGS) -I./libft -I./libftprintf -o $@ $<

clean:
			$(REMOVE) $(OBJ)
			make -C ./libft clean
			make -C ./libftprintf clean

fclean: 	clean
			$(REMOVE) $(NAME)
			make -C ./libft fclean
			make -C ./libftprintf fclean

re: 		fclean all

.PHONY: all clean fclean re
