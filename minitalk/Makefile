$(NAME): 	$(OBJ)
			@$(COMPILE) $(OBJ)

%.o: 		%.c
			$(CC) -c $(CFLAGS) -o $@ $<

clean:
			$(REMOVE) $(OBJ)

fclean: 	clean
			$(REMOVE) $(NAME)

re: 		fclean all

.PHONY: all clean fclean re
