NAME = 		minitalk

SRC = 		talkie-client.c \
			talkie-server.c

OBJ = 		${SRC:.c=.o}

CC = 		gcc

CFLAGS = 	-Wall -Wextra -Werror #-fsanitize=address -g

LIB = 		libft/libft.a \
			libftprintf/libftprintf.a

REMOVE = 	rm -f

COMPILE = 	gcc $(CFLAGS) -o $(NAME) -I ./libft -L. $(LIB)


