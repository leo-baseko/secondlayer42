$(NAME):	$(OBJ_C)
			$(CC) $(CFLAGS) -o $(NAME) $(OBJ_C)

$(NAME2): 	$(OBJ_S)
			$(CC) $(CFLAGS) -o $(NAME2) $(OBJ_S)

%.o: 		%.c
			$(CC) -c $(CFLAGS) -o $@ $<

clean:
			$(REMOVE) $(OBJ_C)
			$(REMOVE) $(OBJ_S)

fclean: 	clean
			$(REMOVE) $(NAME)
			$(REMOVE) $(NAME2)

re: 		fclean all

.PHONY: all clean fclean re
